<?xml version="1.0" encoding="utf-8"?>
<Containers>
    <Date>2021-01-24</Date>
    <Beta>False</Beta>
    <Name>Plex Anilist Sync</Name>
    <Overview>
        <![CDATA[An application that syncs Plex and Anilist.<br />      
            Note: There are two plex authentication options. Token authentication is faster.<br />
            For token authenticaiton you need plex server url and plex token<br />
            For email verification you need plex username, plex password and plex server name]]>
    </Overview>
    <Registry>https://registry.hub.docker.com/u/skippythesnake/plex-ani-sync</Registry>
    <GitHub>https://github.com/SkippyTheSnake/plex-ani-sync</GitHub>
    <Repository>skippythesnake/plex-ani-sync</Repository>
    <Support>https://github.com/SkippyTheSnake/plex-ani-sync</Support>
    <BindTime>true</BindTime>
    <Privileged>false</Privileged>
    <Networking>
        <Mode>host</Mode>
    </Networking>
    <Environment>
        <Variable>
            <Name>PLEX_USERNAME</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>PLEX_PASSWORD</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>PLEX_SERVER_NAME</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>PLEX_SERVER_URL</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>PLEX_TOKEN</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>ANILIST_TOKEN</Name>
            <Value></Value>
        </Variable>
        <Variable>
            <Name>PLEX_ANIME_LIBRARIES</Name>
            <Value>Anime</Value>
        </Variable>
        <Variable>
            <Name>TIME_TO_RUN</Name>
            <Value>17:00</Value>
        </Variable>
    </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/plexAnilistSync</HostDir>
            <ContainerDir>/app/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
</Containers>